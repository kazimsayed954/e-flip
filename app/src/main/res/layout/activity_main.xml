<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#060133"
    android:fillViewport="true"
    android:backgroundTint="#060133"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E81123">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#121839"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg"
            tools:srcCompat="@drawable/bg" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="225dp"
            android:layout_height="115dp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:srcCompat="@drawable/cover" />

        <AdapterViewFlipper
            android:id="@+id/adapterViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="-1dp" />

        <ImageView
            android:id="@+id/pdf_book"
            android:layout_width="wrap_content"
            android:layout_height="273dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="165dp"
            app:srcCompat="@drawable/latest" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="180dp"
            android:layout_height="278dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="227dp"
            android:layout_marginTop="159dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/network" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="235dp"
            android:layout_height="69dp"
            android:layout_below="@+id/pdf_book"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="86dp"
            android:gravity="center"
            android:text="Voice of the People"
            android:textColor="#98EAF4"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="276dp"
            android:layout_height="61dp"
            android:layout_below="@+id/pdf_book"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="261dp"
            android:layout_marginEnd="54dp"
            android:gravity="center"
            android:text="For any Queries and Support"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mail_us"
            android:layout_width="117dp"
            android:layout_height="38dp"
            android:layout_below="@+id/pdf_book"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="303dp"
            android:layout_marginEnd="181dp"
            android:gravity="center"
            android:text="Mail us / "
            android:textColor="#8EE9F4"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@+id/pdf_book"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="190dp"
            android:layout_marginTop="305dp"
            android:layout_marginEnd="104dp"
            android:gravity="center"
            android:text="Whatsapp"
            android:textColor="#8EE9F4"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/clk"
            android:layout_width="250dp"
            android:layout_height="118dp"
            android:layout_above="@+id/pdf_book"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-4dp"
            android:layout_marginBottom="-32dp"
            android:gravity="bottom|clip_horizontal"
            android:text="  Click for Latest Issue"
            android:textColor="#FF0000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/subs"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_marginBottom="279dp"
            android:backgroundTint="#FFCC66"
            android:text="Subscripe to e-flip" />

        <Button
            android:id="@+id/quiz"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="326dp"
            android:layout_marginBottom="-56dp"
            android:backgroundTint="#FFCC66"
            android:text="Quiz" />

        <Button
            android:id="@+id/adv"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/quiz"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="189dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="#FFCC66"
            android:text="Advertise With E-flip" />

        <Button
            android:id="@+id/intern"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/quiz"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="#FFCC66"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Internship" />

        <Button
            android:id="@+id/publish"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginStart="4dp"
            android:layout_marginTop="-57dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:backgroundTint="#FFCC66"
            android:text="Publish Your Article Here" />

        <Button
            android:id="@+id/ca"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="212dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:backgroundTint="#FFCC66"
            android:text="Campus Ambassador" />

        <ImageView
            android:id="@+id/insta"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/insta" />

        <ImageView
            android:id="@+id/fb"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="286dp"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/fb" />

        <ImageView
            android:id="@+id/kindle"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="239dp"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/kindle" />

        <ImageView
            android:id="@+id/html5book"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="188dp"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/html5" />

        <ImageView
            android:id="@+id/blog"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="142dp"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/blog" />

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/you" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="173dp"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="171dp"
            app:srcCompat="@drawable/linkedinsmall" />

        <Button
            android:id="@+id/navbutton"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:onClick="ShowPopup"
            android:layout_above="@+id/subs"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="31dp"
            android:background="#121839"
            android:foreground="@android:drawable/ic_menu_sort_by_size"
            android:visibility="visible" />


    </RelativeLayout>




</androidx.core.widget.NestedScrollView>
