<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#060133"
    android:backgroundTint="#060133"
    android:fillViewport="true"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="426dp"
        android:background="#060133"
        app:layout_constraintBottom_toTopOf="@+id/divider6"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />

    <Button
        android:id="@+id/button"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="#060133"
        android:foreground="@android:drawable/ic_menu_sort_by_size"
        android:onClick="ShowPopup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="402dp"
        android:layout_height="271dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/subscribe"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:backgroundTint="#FFCC66"
            android:ellipsize="middle"
            android:text="Click here to Subscribe to e-flip" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="For Feedback, Suggestions and Complaints Please contact"
            android:textColor="#ff9966" />

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="eflipmagazine@gmail.com"
            android:textColor="#FFFF00" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+91 6281449854 "
            android:textColor="#FFFF00" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+91 6281449854 "
            android:textColor="#FFFF00" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="71dp">

            <ImageView
                android:id="@+id/insta"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/insta" />

            <ImageView
                android:id="@+id/fb"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fb" />

            <ImageView
                android:id="@+id/kindle"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/kindle" />

            <ImageView
                android:id="@+id/html5book"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/html5" />

            <ImageView
                android:id="@+id/blog"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blog" />

            <ImageView
                android:id="@+id/youtube"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/you" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/linkedinsmall" />
        </TableRow>

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="296dp"
        android:layout_height="140dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:srcCompat="@drawable/network" />

    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#060133"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>
